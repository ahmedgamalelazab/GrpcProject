@{
    ViewData["Title"] = "Home Page";
}

@model Inventory

<div class="container">

    <div class="row">
        @foreach (var product in Model.Items)
        {
            <div class="col-4 mb-3">
                <div class="card">
                    .<div class="card">
                        <div class="card-header" style="min-height: 60px; max-height: 60px; overflow: hidden;">
                            <h5 class="text-dark">@product.Product.Name</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center"><img src="@product.Product.Image"
                                alt="loading" height="150px"></div>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="d-flex w-100 align-items-center justify-content-evenly">
                                <div class="price">price : @product.Product.Price $</div>
                                <div class="quantity mx-1">
                                    <font style="font-weight: 800; font-size:15px;">Quantity : @product.Quantity</font>
                                </div>
                                <a class="btn-Btn-Buy" asp-controller="Home" asp-action="Buy"
                                asp-route-id="@product.Product.Id">Purchease</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</div>